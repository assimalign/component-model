<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!--Package Build Configurations-->
		<Version>1.0.0-pre.0.1</Version>
		<LangVersion>9.0</LangVersion>
		<TargetFrameworks>netcoreapp3.1;net5.0;net6.0</TargetFrameworks>
		
		<PackageTags>Validation</PackageTags>
		<PackageId>Assimalign.ComponentModel.Validation</PackageId>
		<AssemblyName>Assimalign.ComponentModel.Validation</AssemblyName>
		<RootNamespace>Assimalign.ComponentModel.Validation</RootNamespace>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		
		<!--Company Branding Information-->
		<Copyright>© Assimalign LLC 2021</Copyright>
		<PackageIcon>.assimalign.logo.png</PackageIcon>
		<PackageIconUrl>https://corporate.assets.assimalign.com/assets/logos/.assimalign.logo.png</PackageIconUrl>
		<PackageProjectUrl>https://github.com/Assimalign-LLC/asal-component-model</PackageProjectUrl>
	</PropertyGroup>
	
	<ItemGroup>
		<None Include="..\..\.assimalign.logo.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>
</Project>
